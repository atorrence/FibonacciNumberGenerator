
@using FibonacciNumberGenerator.Models;
@model Result

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Fibonacci Number Generator</h2>

@using (Html.BeginForm("Result", "Home", FormMethod.Get))
{
    <p>What number of the Fibonacci Sequence would you like to see? Please enter a number less than 93.</p>

    @Html.TextBoxFor(m => m.InputNumber)

    <button> Find Result</button>

}
